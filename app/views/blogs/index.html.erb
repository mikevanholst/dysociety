
<div>

  <h1>Listing blogs</h1>



<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Media</th>
      <th>Author</th>
      <th>Posted on</th>
      <th>Teaser</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.title %></td>
        <td><%= blog.content %></td>
        <td><%= blog.media %></td>
        <td><%= blog.author %></td>
        <td><%= blog.posted_on %></td>
        <td><%= blog.teaser %></td>
        <td><%= link_to 'Show', blog %></td>
        <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
        <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Blog', new_blog_path %>

</div>

